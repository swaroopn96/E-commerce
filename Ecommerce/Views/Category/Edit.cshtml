@model Ecommerce.Models.Category

<form method="post">
    <input asp-for="Id" hidden /> @*In update we need Id so we make it hidden so that null is not passed*@
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p1-3">Edit Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                       
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        @*Advantages of tag helpers is it gets name from model*@
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>

</form>
