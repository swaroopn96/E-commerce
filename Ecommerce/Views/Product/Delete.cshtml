@model Ecommerce.Models.Products
@{
    var title = "Delete Product";
}
<form method="post">
    @*if enctype not added image won't work*@
    <input asp-for="Id" hidden /> @*In delete we need Id so we make it hidden so that null is not passed*@
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p1-3">Delete Product</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-4">
                        @*Advantages of tag helpers is it gets name from model*@
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        @*Using View Bag*@
                        @*If disabed added user will not be able to select this --Select Category--*@
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> <i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@WebConstants.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>

    </div>

</form>


@*Client Side Validation now it will not hit the server*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>//Add this inorder summernote to work and this comes after adding in layout page
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });

        });
        
        </script>
}